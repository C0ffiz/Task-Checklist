{
  "name": "task-checklist",
  "version": "2.4.0",
  "description": "A Warframe Task Checklist to track daily, weekly, and other tasks. Built with HTML, CSS (Tailwind via CDN), and vanilla JavaScript, processed with Vite.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:capacitor": "vite build --mode capacitor",
    "preview": "vite preview",
    "cap:add": "npx cap add android",
    "cap:sync": "npm run build:capacitor && npx cap sync android",
    "cap:open": "npx cap open android",
    "build:android": "npm run build:capacitor && npx cap sync android"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warframe-tools/Task-Checklist.git"
  },
  "keywords": [
    "warframe",
    "task",
    "checklist",
    "gaming",
    "utility"
  ],
  "author": "WarframeTools",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/warframe-tools/Task-Checklist/issues"
  },
  "homepage": "https://warframetools.com/Task-Checklist/",
  "devDependencies": {
    "@capacitor/android": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/core": "^6.2.0",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "vite-plugin-html": "^3.2.2"
  }
}
